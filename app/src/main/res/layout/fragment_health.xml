<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HealthFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/healthLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="220dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="Exponential and logrithmic
illustration of Limits"
                    android:textColor="#363636"
                    android:textSize="12sp"

                    app:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Name of Chapter"
                    android:textColor="#363636"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Name of Chapter"
                    android:textColor="#363636"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Name of Chapter"
                    android:textColor="#363636"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Name of Chapter"
                    android:textColor="#363636"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Name of Chapter"
                    android:textColor="#363636"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:layout_marginTop="10dp"

                android:orientation="vertical">


                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:color="#ffff"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="#FDD835" />

                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="27dp"
                    android:background="#857E7E"
                    android:max="100"
                    android:progress="70"
                    android:progressTint="#FDD835" />


                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:background="#857E7E"
                    android:max="100"
                    android:progress="30"
                    android:progressTint="#E53935" />

                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:background="#857E7E"
                    android:color="#ffff"
                    android:max="100"
                    android:progress="90"
                    android:progressTint="#4FC154" />

                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:background="#857E7E"
                    android:color="#ffff"
                    android:max="100"
                    android:progress="42"
                    android:progressTint="#E3ED54" />

                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="28dp"
                    android:background="#857E7E"
                    android:color="#ffff"
                    android:max="100"
                    android:progress="12"
                    android:progressTint="#FF0600" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="50%"
                    android:textColor="#FDD835"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="60%"
                    android:textColor="#FFB300"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="30%"
                    android:textColor="#C64E4B"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="90%"
                    android:textColor="#00FF0B"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="42%"
                    android:textColor="#DDE844"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="12%"
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    app:fontFamily="@font/poppins_medium" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/healthLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/healthLayout1">

            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:text="Previous"
                android:textColor="#707070"
                android:textSize="12sp"
                app:fontFamily="@font/poppins" />

            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:text="Next"
                android:textColor="#007BFF"
                android:textSize="12sp"
                app:fontFamily="@font/poppins" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>